@page "/TokenList"

@using Data.Models

<MudToolBar>
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBackIos" OnClick="GoBack">
        Go back
    </MudIconButton>
</MudToolBar>

<MudTable Items="@_tokens" Hover="true"
          Striped="true"
          RowClassFunc="SelectRow"
          T="Token"
          OnRowClick="GoToTokenDetails">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Saved tokens</MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Date</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Creation date">@context.CreationDate.ToShortDateString()</MudTd>
    </RowTemplate>
</MudTable>