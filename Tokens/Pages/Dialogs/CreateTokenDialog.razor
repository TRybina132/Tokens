@using Data.Models;

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add"/>
            Add token to collection
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@Token.Name" Label="Token name"/>
        <MudTextField Value="@Token.Notes" Label="Notes"/>
    </DialogContent>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Token Token { get; set; }

    private void Cancel() => MudDialog.Cancel();
}